# RIMURU CRYPTO EMPIRE - Environment Configuration
# Copy this file to .env and fill in your values

# Security
VAULT_MASTER_PASSWORD=your_secure_vault_password_here
VAULT_ENCRYPTION_KEY=your_encryption_key_here

# Database
DB_PASSWORD=your_database_password_here

# Exchange API Keys (Optional - can be added via GUI)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_SECRET_KEY=your_kraken_secret_key

# Blockchain APIs (Optional)
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# AI Configuration
OLLAMA_MODEL=llama2

# Trading Defaults
DEFAULT_MAX_POSITION_PCT=0.10
DEFAULT_MAX_DAILY_LOSS_PCT=0.02
DEFAULT_STOP_LOSS_PCT=0.05
DEFAULT_TAKE_PROFIT_PCT=0.10

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/rimuru.log

# Development
DEBUG=false
PAPER_TRADING=true