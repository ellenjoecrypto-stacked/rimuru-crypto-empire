# ============================================
# RIMURU CRYPTO EMPIRE - Rimuru AI Core
# Self-learning AI with Ollama + ML trading
# ============================================
FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    build-essential \
    gcc g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install AI/ML dependencies
RUN pip install --no-cache-dir \
    fastapi==0.109.0 \
    uvicorn==0.27.0 \
    aiohttp==3.9.1 \
    pydantic==2.5.3 \
    requests==2.31.0 \
    numpy==1.26.2 \
    pandas==2.1.4 \
    scikit-learn==1.3.2 \
    scipy==1.11.4 \
    python-dotenv==1.0.0

# Copy AI core + integration
COPY core/rimuru_ai.py /app/core/rimuru_ai.py
COPY core/risk_manager.py /app/core/risk_manager.py
COPY core/exchange_manager.py /app/core/exchange_manager.py
COPY services/price_engine.py /app/services/price_engine.py
COPY integrators/rimuru_bridge.py /app/integrators/rimuru_bridge.py
COPY api/ai_service.py /app/api/ai_service.py

RUN useradd -m -u 1000 rimuru && \
    mkdir -p /data/ai_models /logs && \
    chown -R rimuru:rimuru /app /data /logs

USER rimuru

ENV PYTHONPATH=/app
ENV OLLAMA_URL=http://ollama:11434
ENV AI_SERVICE_PORT=8300

HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8300/health')"

EXPOSE 8300

CMD ["python", "/app/api/ai_service.py"]
